<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="fontStyle_white_40dp" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">40dp</item>
    </style>
    
    <style name="fontStyle_white_66dp" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">46dp</item>
    </style>
    
    <style name="fontStyle_white_30dp" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30dp</item>
    </style>
    
    <style name="fontStyle_white_20dp" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
    
    <style name="fontStyle_green_30dp" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">20dp</item>
    </style>
    
    <style name="fontStyle_blue_gray_36dp" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:textSize">36dp</item>
    </style>
    
     <style name="fontStyle_green_24dp" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">24dp</item>
    </style>
    
</resources>
